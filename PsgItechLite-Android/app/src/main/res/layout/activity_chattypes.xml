<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.otheractivities.chattypes">
    <Button
        android:layout_width="430dp"
        android:layout_height="160dp"
        android:text="Chat"
        android:textStyle="italic"
        android:textSize="20dp"
        android:background="@drawable/colorful"
        android:id="@+id/chat"
        android:layout_gravity="center"
        android:onClick="chat"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="477dp"
        android:layout_height="160dp"
        android:text="Bluetooth Chat"
        android:textStyle="italic"
        android:textSize="20dp"
        android:id="@+id/bluetoothchat"
        android:background="@drawable/blue"
        android:layout_gravity="center_horizontal|top"
        android:onClick="chat"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="350dp"
        android:layout_height="160dp"
        android:text="Clubs Chat"
        android:textStyle="italic"
        android:textSize="20dp"
        android:background="@drawable/abstract1"
        android:id="@+id/clubchat"
        android:layout_gravity="center_horizontal|bottom"
        android:onClick="chat"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>

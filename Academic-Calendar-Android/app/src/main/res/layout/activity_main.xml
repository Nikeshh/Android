<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.nikeshhbaskaran.academiccalendar.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#eee">

        <Button
            android:id="@+id/detail"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="Details about the months"
            android:layout_marginBottom="0dp"
            android:layout_margin="0dp"
            android:drawableLeft="@drawable/about_icon_copy_right"
            android:drawableStart="@drawable/about_icon_copy_right" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#eee">

        <Button
            android:id="@+id/january"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="January"
            android:layout_margin="0dp"
            android:drawableLeft="@drawable/about_icon_copy_right"
            android:drawableStart="@drawable/about_icon_copy_right"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#888"/>

        <Button
            android:id="@+id/february"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="February"
            android:layout_margin="0dp"
            android:drawableLeft="@drawable/about_icon_copy_right"
            android:drawableStart="@drawable/about_icon_copy_right"
            style="@style/Widget.AppCompat.Button.Borderless"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#eee">

        <Button
            android:id="@+id/april"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="April"
            android:layout_margin="0dp"
            android:drawableLeft="@drawable/about_icon_copy_right"
            android:drawableStart="@drawable/about_icon_copy_right"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#888"/>

        <Button
            android:id="@+id/march"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="March"
            android:layout_margin="0dp"
            android:drawableLeft="@drawable/about_icon_copy_right"
            android:drawableStart="@drawable/about_icon_copy_right"
            style="@style/Widget.AppCompat.Button.Borderless"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#eee">

        <Button
            android:id="@+id/may"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="May"
            android:layout_margin="0dp"
            android:drawableLeft="@drawable/about_icon_copy_right"
            android:drawableStart="@drawable/about_icon_copy_right"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#888"/>

        <Button
            android:id="@+id/june"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="June"
            android:layout_margin="0dp"
            android:drawableLeft="@drawable/about_icon_copy_right"
            android:drawableStart="@drawable/about_icon_copy_right"
            style="@style/Widget.AppCompat.Button.Borderless"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#eee">

        <Button
            android:id="@+id/july"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="July"
            android:layout_margin="0dp"
            android:drawableLeft="@drawable/about_icon_copy_right"
            android:drawableStart="@drawable/about_icon_copy_right"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#888"/>

        <Button
            android:id="@+id/august"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="August"
            android:layout_margin="0dp"
            android:drawableLeft="@drawable/about_icon_copy_right"
            android:drawableStart="@drawable/about_icon_copy_right"
            style="@style/Widget.AppCompat.Button.Borderless"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#eee">

        <Button
            android:id="@+id/september"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="September"
            android:layout_margin="0dp"
            android:drawableLeft="@drawable/about_icon_copy_right"
            android:drawableStart="@drawable/about_icon_copy_right"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#888"/>

        <Button
            android:id="@+id/october"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="October"
            android:layout_margin="0dp"
            android:drawableLeft="@drawable/about_icon_copy_right"
            android:drawableStart="@drawable/about_icon_copy_right"
            style="@style/Widget.AppCompat.Button.Borderless"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#eee">

        <Button
            android:id="@+id/november"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="November"
            android:layout_margin="0dp"
            android:drawableLeft="@drawable/about_icon_copy_right"
            android:drawableStart="@drawable/about_icon_copy_right"
            style="@style/Widget.AppCompat.Button.Borderless"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#888"/>

        <Button
            android:id="@+id/december"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="December"
            android:layout_margin="0dp"
            android:drawableLeft="@drawable/about_icon_copy_right"
            android:drawableStart="@drawable/about_icon_copy_right"
            style="@style/Widget.AppCompat.Button.Borderless"/>

    </LinearLayout>

</LinearLayout>

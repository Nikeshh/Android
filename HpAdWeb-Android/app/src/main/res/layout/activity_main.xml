<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:id="@+id/coordinateLayout"
    android:orientation="vertical"
    android:layout_height="match_parent" tools:context=".MainActivity">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/splash"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <android.support.v7.widget.CardView
            android:id="@+id/card_photo_1"
            style="@style/Card">

            <include
                layout="@layout/card_photo"
                android:transitionName="photo1" />

            <TextView
                android:id="@+id/show_photo_1"
                style="@style/CardTitle"
                android:text="Hewlett Packard" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_photo_2"
            style="@style/Card">

            <include
                layout="@layout/card_photo"
                android:transitionName="photo2" />

            <TextView
                android:id="@+id/show_photo_2"
                style="@style/CardTitle"
                android:text="Ad Web" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_photo_3"
            style="@style/Card">

            <include
                layout="@layout/card_photo"
                android:transitionName="photo3" />

            <TextView
                android:id="@+id/show_photo_3"
                style="@style/CardTitle"
                android:text="Products" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_photo_4"
            style="@style/Card">

            <include
                layout="@layout/card_photo"
                android:transitionName="photo4" />

            <TextView
                android:id="@+id/show_photo_4"
                style="@style/CardTitle"
                android:text="Customer Support" />

        </android.support.v7.widget.CardView>

    </LinearLayout>

    </ScrollView>

    </android.support.design.widget.CoordinatorLayout>
